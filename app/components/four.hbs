{{#if playing}}
  {{#if desktop}}
    <div class="text-center">
      <button {{action "start"}}>Restart the game</button>
    </div>
  {{else}}
    <div class="text-center">
      <button  {{action "start"}}>Restart the game</button>
    </div>
  {{/if}}
  {{#if winner}}
    <div class="game-message">
      '{{winner}}'Player Won!
    </div>
  {{/if}}
  {{#if draw}}
    <div class="game-message">
      Draw.
    </div>
  {{/if}}
{{else}}
  {{#if desktop}}
    <div class="text-center">
      <button {{action "start"}}>Start Game!</button>
    </div>
  {{else}}
    <div class="text-center">
      <button {{action "start"}}>Start Game!</button>
    </div>
  {{/if}}
{{/if}}

<canvas id="stage" width="360" height="400"></canvas>